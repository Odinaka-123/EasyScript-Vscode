{
  "$schema": "vscode://schemas/color-theme",
  "name": "EasyScript Theme",
  "type": "dark",
  "colors": {},
  "tokenColors": [
    {
      "scope": "keyword.control.easyscript",
      "settings": {
        "foreground": "#C586C0",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "string.quoted.double.easyscript",
      "settings": {
        "foreground": "#CE9178"
      }
    },
    {
      "scope": "constant.numeric.easyscript",
      "settings": {
        "foreground": "#B5CEA8"
      }
    },
    {
      "scope": "variable.other.easyscript",
      "settings": {
        "foreground": "#9CDCFE"
      }
    },
    {
      "scope": "comment.line.easyscript",
      "settings": {
        "foreground": "#6A9955",
        "fontStyle": "italic"
      }
    }
  ]
}
