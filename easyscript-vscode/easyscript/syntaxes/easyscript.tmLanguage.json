{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "EasyScript",
  "scopeName": "source.easyscript",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.easyscript",
          "match": "\\b(set|say|if|repeat|to|is|greater|than|equal|times)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.easyscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.easyscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.easyscript",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.easyscript",
          "match": "#.*$"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.easyscript",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
